#include <iostream>
#include <cstdlib>
using namespace std;
// work in progress
int main ()
{
string entry;
string entry2;
string guess;
int v,w,x = 1,y,z = 0;
while (x == 1)
{
    cout << "Player 1, enter your word (8 letters max): ";
    cin >> entry;
    cout << "How many letters is your word? ";
    cin >> v;
    cout << "You entered " << entry << " which is " << v << " letters long, is that correct? [Y or N] ";
    cin >> guess;
    guess[0] = tolower(guess[0]);
    switch (v)
    {
    case 1:
        entry2 = "_";
        break;
    case 2:
        entry2 = "_ _";
        break;
    case 3:
        entry2 = "_ _ _";
        break;
    case 4:
        entry2 = "_ _ _ _";
        break;
    case 5:
        entry2 = "_ _ _ _ _";
        break;
    case 6:
        entry2 = "_ _ _ _ _ _";
        break;
    case 7:
        entry2 = "_ _ _ _ _ _ _";
        break;
    case 8:
        entry2 = "_ _ _ _ _ _ _ _";
        break;
    }

    if (guess[0] == 'y')
    {
        cout << "Great then let's play hangman!\n";
        ++x;
    }
    else
    {
        cout << "Alright let's try again.\n";
    }
}
while (x == 2)
{
    cout << "\n\nPlayer 2, enter your guess: ";
    cin >> guess;
    guess[0] = tolower(guess[0]);
    w = 0;
    y = 0;
    for (int q=0;q<=7;q++)
    {
        if (guess[0] == entry[y])
        {
           if (y == q)
           {
               w = q*2;
           }
           entry2[w] = '*';
        }
        else
        {
           ++y;
        }
    }
    cout << entry2;
}




  system("pause");
  return 0;
}
